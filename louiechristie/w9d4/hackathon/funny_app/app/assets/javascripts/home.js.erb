var FunnyPictures = FunnyPictures || {};

FunnyPictures.showBackground = function(layer, stage, url) {
  var background = new Image();
  background.src = url;

  background.onload = function() {
    var background_k = new Kinetic.Image({
      x: 0,
      y: 0,
      image: background,
      width: 480,
      height:480,
    });
    layer.add(background_k);
    stage.add(layer);
  };
};

FunnyPictures.showMustache = function(layer, stage) {
  var mustache = new Image();
  mustache.onload = function() {
    var mustache_k = new Kinetic.Image({
      x: 240-(100/2),
      y: 240-(38/2),
      image: mustache,
      width: 100,
      height: 38,
      draggable: true
    });
    mustache_k.on('mouseover', function() {
      document.body.style.cursor = 'pointer';
    });
    mustache_k.on('mouseout', function() {
      document.body.style.cursor = 'default';
    });
    layer.add(mustache_k);
    stage.add(layer);
    mustache_k.moveToTop();
    layer.draw();
  };
  mustache.src = '<%= asset_path('mustache.png') %>';
};

FunnyPictures.setup = function() {

  var stage = new Kinetic.Stage({
    container: 'container',
    width: 480,
    height: 480
  });
  
  var layer = new Kinetic.Layer();
  url = '/assets/silhouette.png'
  FunnyPictures.showBackground(layer, stage, url);

  FunnyPictures.showMustache(layer, stage);

  $('#save').on('click', function() {
    stage.toDataURL({
      callback: function(dataUrl) {
        document.getElementById('canvasImg').src = dataUrl;      }
    });
  });

  $('#add_image').on('click', function() {
    url = '/assets/dan.png'
    FunnyPictures.showBackground(layer, stage, url);
  });
  
};

$(FunnyPictures.setup)