<h1>Listing cheerups</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Image url</th>
    <th>User</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cheerups.each do |cheerup| %>
  <tr>
    <td><%= cheerup.message %></td>
    <td><%= cheerup.image_url %></td>
    <td><%= cheerup.user_id %></td>
    <td><%= cheerup.state %></td>
    <td><%= link_to 'Show', cheerup %></td>
    <td><%= link_to 'Edit', edit_cheerup_path(cheerup) %></td>
    <td><%= link_to 'Destroy', cheerup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

