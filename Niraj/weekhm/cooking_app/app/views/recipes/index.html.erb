<h2>Recipes</h2>

<p> <a href="<%= new_recipe_path %>" >New Recipe</a></p>

<div class="recipe">


        <% @recipes.each do |recipe| %>

          <p> Name: <%= recipe.name %> </p>
          <p> Serving size: <%= recipe.serving_size %> </p>
          <p> <input type="image" src="<%= recipe.picture %>" name="image" width="300" height="169"> </p>
          <p> Category: <%= recipe.category.try :name %>
          <p>Ingredients:</p>

          <%= image_tag recipe.recipe_image.url %>

          <% if can? :update, recipe %>
                
          <%= link_to "edit", edit_recipe_path(recipe)%>

          <% end %>



         <%= link_to 'Delete', recipe_path(recipe), method: 'delete', confirm: 'Are you sure?' %> 
</div>
        <% end %>

