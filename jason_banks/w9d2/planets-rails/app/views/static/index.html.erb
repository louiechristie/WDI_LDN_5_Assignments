  <a href="#planet/new"><button>Add Planet</button></a>
  <div id="planets-container">
    <p>Please wait, loading planets&hellip;</p>
  </div>
  <br />
  <br />
  <a href="#star/new"><button>Add Star</button></a>
  <div id="stars-container">
    <p>Please wait, loading stars&hellip;</p>
  </div>
</div>