<div class="stocks">

<dl>
  <dt>
    <label for='stock_symbol'>Symbol:</label>
  </dt>
  <dd>
    <input id='stock_symbol' type='text' name='stock[symbol]' value='<%=@stock.symbol %>' autofocus required>
  </dd>
</dl>

<dl>
  <dt>
    <h2><label for='stock_holding'>Holding:</label></h2>
  </dt>
  <dd>
    <input id='stock_holding' type='text' name='stock[holding]' value='<%=@stock.holding %>' required>
  </dd>
</dl>

<dl>
  <dt>
    <h2><label for='stock_portfolio_id'>Portfolio:</label></h2>
  </dt>
  <dd>
    <select id='stock_portfolio_id' name='stock[portfolio_id]'required>
      <% @portfolios.each do |portfolio| %>
        <option value='<%= portfolio.id %>' <% if @stock.portfolio_id==portfolio.id %>selected='selected'<% end %> >
          <%= portfolio.name %>
        </option>
      <% end %>
    </select>
  </dd>
</dl>

</div>

<div class='clear_both'></div>